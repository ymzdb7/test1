<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context" xmlns:mvc="http://www.springframework.org/schema/mvc"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.0.xsd">

	<!-- 开启controller注解支持 -->
	<context:component-scan base-package="com.winhands">
		<context:include-filter type="annotation" expression="org.springframework.stereotype.Controller" />
		<context:include-filter type="annotation" expression="org.springframework.web.bind.annotation.ControllerAdvice" />
		<context:exclude-filter type="annotation" expression="org.springframework.stereotype.Service" /> 
	</context:component-scan>

	<mvc:annotation-driven>
		<mvc:message-converters register-defaults="true">
			<!-- StringHttpMessageConverter编码为UTF-8，防止乱码 -->
			<bean class="org.springframework.http.converter.StringHttpMessageConverter">
				<constructor-arg value="UTF-8" />
				<property name="supportedMediaTypes">
					<list>
						<bean class="org.springframework.http.MediaType">
							<constructor-arg index="0" value="text" />
							<constructor-arg index="1" value="plain" />
							<constructor-arg index="2" value="UTF-8" />
						</bean>
						<bean class="org.springframework.http.MediaType">
							<constructor-arg index="0" value="*" />
							<constructor-arg index="1" value="*" />
							<constructor-arg index="2" value="UTF-8" />
						</bean>
					</list>
				</property>
			</bean>

			<bean id="fastJsonHttpMessageConverter" class="com.alibaba.fastjson.support.spring.FastJsonHttpMessageConverter">
				<property name="supportedMediaTypes">
					<list>
						<value>application/json;charset=UTF-8</value>
					</list>
				</property>
				<property name="features">
					<array>
						<value>WriteMapNullValue</value>
						<value>WriteDateUseDateFormat</value>
						<value>WriteNullBooleanAsFalse</value>
						<value>WriteNullStringAsEmpty</value>
						<value>WriteNullListAsEmpty</value>
					</array>
				</property>
			</bean>
		</mvc:message-converters>
	</mvc:annotation-driven>

	<!-- 不使用controller直接跳转 -->
	<mvc:view-controller path="/" view-name="index" />
	<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/" />
		<property name="suffix" value=".jsp" />
	</bean>

	<!-- 配置上传下载文件bean -->
    <bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">  
        <!-- 设置上传文件的最大尺寸为50MB -->  
        <property name="maxUploadSize">  
            <value>51200000</value>  
        </property> 
        <property name="maxInMemorySize" value="10" /> 
    </bean> 

	<!-- 当在web.xml 中 DispatcherServlet使用 <url-pattern>/</url-pattern> 映射时，能映射静态资源 -->
	<mvc:default-servlet-handler />
	<mvc:resources mapping="/login/**" location="/login/" />
	<!-- 登录校验 -->
    <mvc:interceptors>
        <mvc:interceptor>
            <mvc:mapping path="/**"/>
            <bean id="loginInterceptor" class="com.winhands.base.interceptor.SessionTimeoutInterceptor">
                    <property name="allowUrls">  
				        <list>  
				        <value>login</value>
						<value>msLogin</value>
						<value>register</value>
						<value>sendSMS</value>
				        <value>/js/</value>
				        <value>/images/</value>
				        <value>/image/</value>
				        <value>/ueditor1.4.3.3/jsp/upload/</value>
				        <value>/css/</value> 
				        <value>/fonts/</value>
				        <value>/member/msSendSMS</value>
						<value>/member/msForgivePass</value>
						<value>/member/msResetPass</value>
						<value>/fee/msGetMemberShipFee</value>
						<value>/article/msContentList</value>
						<value>/article/msReadLogChangeState</value>
						<value>/article/msCollectList</value>
						<value>/directory/msQueryDirAuthorList</value>
						<value>/comment/msGetComment</value>
						<value>/wxPay/syncStatus</value>
						<value>/org/msQueryOrg</value>
						<value>/news/msCarouselList</value>
						<value>/news/msInfoList</value>
						<value>/upload/info</value>
						<value>/upload/carousel</value>
						<value>/integration/msQueryRuleList</value>
						<value>/article/msReadList</value>
				        </list>
			        </property>
            </bean>
        </mvc:interceptor>
    </mvc:interceptors>  
    
    <!-- exception handler -->
    <bean id="handlerExceptionResolver"
    	class="org.springframework.web.servlet.handler.SimpleMappingExceptionResolver" >
    	<property name="exceptionMappings">
    		<props>
    			<prop key="com.winhands.base.exception.SessionTimeoutException">/login</prop>
    			<prop key="com.winhands.base.exception.SessionTimeoutClientException">/msReLogin</prop>
    		</props>
    	</property>
    </bean>
     
</beans>
